<ul>
  <li><%= @collection.name %></li>
  <li>Description: <%= @collection.description %></li>
  <li>Created on: <%= @collection.created_at.strftime('%A: %B %e, %Y at %l:%m %P') %></li>
  <li>Updated on: <%= @collection.updated_at.strftime('%A: %B %e, %Y at %l:%m %P') %></li>
</ul>
<br>
<br>
<%= link_to 'edit', edit_collection_path(@collection) %>
<%= link_to 'delete', @collection, :method => :delete, :confirm => 'Are you sure you want to DELETE this COLLECTION?' %>
<br>
<ul>
  <% @collection.movies.each do |movie| %>
  <li><%= link_to(movie.title, movie) %></li>
  <li><%= image_tag(movie.poster) %></li>
</ul>
<% end %>