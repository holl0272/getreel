<!-- Header and Nav -->

  <div class="row">
    <div class="twelve columns">
      <div class="panel">
        <h1>Check out the <em>Reel</em> Rack!</h1>
      </div>
    </div>
  </div>

  <!-- End Header and Nav -->


  <div class="row">

    <!-- Main Feed -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="six columns push-three">



      <!-- Feed Entry -->
      <% @collections.each do |collection| %>
      <div class="row">
        <div class="two columns mobile-one"><%= link_to(image_tag("reel1.jpg"), collection) %></div>
        <div class="ten columns">
          <p><strong>Name: </strong><%= collection.name %></p>
          <p><strong>Description: </strong><%= collection.description %></p>
        </div>
      </div>
      <hr />
 <% end %>
      <!-- End Feed Entry -->

    </div>


    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="three columns pull-six">
      <div class="panel">
        <%= image_tag("film1.jpg") %>
                <h5><a>View your <em>Reelz</em></a></h5>

      <p>You're only a click away from exploring all of the <em>Reelz</em> you've created.<br>
        Just click on the <em>Reelz</em> icon next to your collections to view all the movies and actors you've collected</p>



      </div>
    </div>


    <!-- Right Sidebar -->
    <!-- On small devices this column is hidden -->
    <aside class="three columns hide-for-small">
      <%= image_tag("reel2.jpg") %> <br>
      <%= image_tag("reel3.jpg") %> <br>
    </aside>

  </div>