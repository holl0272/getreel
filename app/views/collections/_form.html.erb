<div class="row">
    <div class="twelve columns">

     <!-- Managed By -->

            <div class="twelve columns">
              <div class="panel">
                <div class="row">
<div class="twelve columns">

<%= form_for @collection do |f| %>
    <legend><strong>Create a New <em>Reel</em> by including a name and description below:</strong></legend>
<br>
    <label><%= f.label :name, "Name" %></label>
    <%= f.text_field :name, :autofocus => true %>

<label><%= f.label :description, "Description" %></label>
    <%= f.text_field :description %>
</div>
</div>


                </div>
              </div>
            </div>

    <!-- End Managed By -->


      <div class="row">

  <!-- Side Bar -->

        <div class="four mobile-four columns">

          <%= image_tag("film1.jpg") %>

          <div class="hide-for-small panel">
            <h3>Include Films to your New <em>Reel</em>...</h3>
            <h5 class="subheader">Before adding your new <em>Reel</em> to the Rack, please peruse the extensive collection we have here and simply add your favorite movies by checking the box next to their titles.
            </h5>
          </div>
        <div align="center">
          <input id="btn" class="panel callout radius" name="commit" type="submit" value="Add your new Reel to the Rack">
          </div>


        </div>

    <!-- End Side Bar -->


    <!-- Thumbnails -->

        <div class="eight columns">
          <div class="row">
            <% Movie.order(:title).each do |movie| %>

            <div class="four mobile-two columns">
              <div id="poster">
              <%= image_tag(movie.poster) %>
            </div>
              <div class="panel">
                <h5><%= check_box_tag 'collection[movie_ids][]', movie.id, movie.in?(@collection.movies.to_a) %><%= movie.title %></h5>
              </div>
            </div>
        <% end %>



          </div>
        </div>
      </div>

<% end %>


    </div>
  </div>






