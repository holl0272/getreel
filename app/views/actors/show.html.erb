<ul>
  <li><%= link_to(@actor.name, @actor) %></li>
  <li><%= image_tag(@actor.image) %></li>
  <li><%= @actor.birthplace %></li>
  <li><%= @actor.dob %></li>
  <li><%= @actor.dod %></li>
  <li>Added on: <%= @actor.created_at.strftime('%A: %B %e, %Y at %l:%m %P') %></li>
  <li>Updated on: <%= @actor.updated_at.strftime('%A: %B %e, %Y at %l:%m %P') %></li>
</ul>
<br>
<br>
<%= link_to 'edit', edit_actor_path(@actor) %>
<%= link_to 'delete', @actor, :method => :delete, :confirm => 'Are you sure you want to DELETE this ACTOR?' %>


