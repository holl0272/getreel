<body>

  <!-- Header and Nav -->

  <div class="row">
    <div class="six columns">
      <h1 id="logo"><strong><%= link_to('Get Reel', root_path) %></strong><%= image_tag("logo.jpg") %></h1>
    </div>
    <div class="six columns">
      <ul class="nav-bar right">

  <li class="has-flyout">
    <a href="#">Reelz</a>
    <a href="#" class="flyout-toggle"><span> </span></a>
    <ul class="flyout">
      <li><%= link_to('Build a New Reel', new_collection_path) %></li>
      <li><%= link_to('View your Reel Rack', collections_path) %></li>
    </ul>
  </li>
  <li class="has-flyout">
      <a href="#">Movies</a>
    <a href="#" class="flyout-toggle"><span> </span></a>
    <ul class="flyout">
      <li><%= link_to('View all Movies', movies_path) %></li>
      <li><%= link_to('Add a New Movie', new_movie_path) %></li>
      <li><%= link_to('Search for Movies', movie_index_path) %></li>
    </ul>
  </li>
    <li class="has-flyout">
      <a href="#">Actors</a>
    <a href="#" class="flyout-toggle"><span> </span></a>
    <ul class="flyout">
      <li><%= link_to('View all Actors', actors_path) %></li>
      <li><%= link_to('Add a new Actor', new_actor_path) %></li>
      <li><%= link_to('Search for Actors', actor_index_path) %></li>
    </ul>
  </li>

      </ul>
    </div>
  </div>

  <!-- End Header and Nav -->

<%= yield %>

     <!-- Footer -->

